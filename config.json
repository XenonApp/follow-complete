{
    databases: {
        follow: {
            keyPath: "id",
            indexes: {
                pred_idn: {
                    keyPath: ["mode", "sep", "prev", "rank", "follow"]
                }
            },
            // bla: false
        }
    },
    commands: {
        "Tools:Follow:Index": {
            scriptUrl: "./index.js",
            inputs: {
                text: true,
                modeName: true
            }
        },
        "Tools:Follow:Complete": {
            scriptUrl: "./complete.js",
            inputs: {
                text: true,
                cursorIndex: true,
                modeName: true
            }
        },
        "Tools:Follow:Trigger Complete": {
            scriptUrl: "./trigger_complete.js",
            inputs: {
                cursor: true
            }
        }
    },
    modes: {
        javascript: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        python: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        ruby: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        go: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        java: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        csharp: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        groovy: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        lua: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        nix: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        rust: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        scala: {
            handlers: {
                complete: ["Tools:Follow:Complete"],
                index: ["Tools:Follow:Index"]
            }
        },
        php: {
            commands: {
                "Tools:Follow:Index:PHP": {
                    scriptUrl: "./index.js",
                    inputs: {
                        text: true,
                        modeName: true
                    },
                    separators: ["->", "::", "\\"],
                    internal: true
                },
                "Tools:Follow:Complete:PHP": {
                    scriptUrl: "./complete.js",
                    inputs: {
                        text: true,
                        cursorIndex: true,
                        modeName: true
                    },
                    separators: ["->", "::", "\\"],
                    internal: true
                },
            },
            handlers: {
                index: ["Tools:Follow:Index:PHP"],
                complete: ["Tools:Follow:Complete:PHP"]
            }
        }
    }
}
